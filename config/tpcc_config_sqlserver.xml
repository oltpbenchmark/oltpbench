<?xml version="1.0"?>
<parameters>
    
    <!-- Connection details -->
    <dbtype>sqlserver</dbtype>
    <driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</driver>
    <DBUrl>jdbc:sqlserver://localhost:1433</DBUrl>
    <username></username>
    <password></password>
    <isolation>TRANSACTION_READ_COMMITTED</isolation>
    
    <!-- Scale factor is the number of warehouses in TPCC -->
    <scalefactor>16</scalefactor>
    
    <!-- The workload -->
    <terminals>64</terminals>
    <works>
        <work>
          <time>300</time>
          <rate>unlimited</rate>
          <weights>45,43,4,4,4</weights>
        </work>
    </works>
    
    <!-- TPCC specific -->  
    <transactiontypes>
        <transactiontype>
            <name>NewOrder</name>
        </transactiontype>
        <transactiontype>
            <name>Payment</name>
        </transactiontype>
        <transactiontype>
            <name>OrderStatus</name>
        </transactiontype>
        <transactiontype>
            <name>Delivery</name>
        </transactiontype>
        <transactiontype>
            <name>StockLevel</name>
        </transactiontype>
    </transactiontypes> 
</parameters>
