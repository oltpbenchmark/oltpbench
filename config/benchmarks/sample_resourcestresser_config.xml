<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>mysql</dbtype>
    <driver>com.mysql.jdbc.Driver</driver>
    <DBUrl>jdbc:mysql://localhost:3306/resourcestresser</DBUrl>
    <username>root</username>
    <password></password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>

    <!-- Scalefactor in ResourceStresser scales by *100 the number of employees -->
    <scalefactor>2</scalefactor>
    
    <!-- The workload -->   
    <terminals>2</terminals>    
    <works>
        <work>
            <time>300</time>
            <rate>10000</rate>
            <weights>16.66,16.66,16.66,16.66,16.66,16.7</weights>
        </work>
    </works>
    
    <!-- R/S Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>CPU1</name>
        </transactiontype>
        <transactiontype>
            <name>CPU2</name>
        </transactiontype>
        <transactiontype>
            <name>IO1</name>
        </transactiontype>
        <transactiontype>
            <name>IO2</name>
        </transactiontype>
        <transactiontype>
            <name>Contention1</name>
        </transactiontype>
        <transactiontype>
            <name>Contention2</name>
        </transactiontype>
    </transactiontypes>

</parameters>
