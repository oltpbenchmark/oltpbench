<?xml version="1.0"?>
<parameters>
    <!-- Connection details -->
    <dbtype>mysql</dbtype>
    <driver>com.mysql.jdbc.Driver</driver>
    <DBUrl>jdbc:mysql://server:3306/jpab</DBUrl>
    <username>user</username>
    <password>password</password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    
    <!-- Number of Initial Objects -->
    <scalefactor>1000000</scalefactor>
    
    <!-- Hibernate configuration -->
    <persistence-unit>Hibernate-MySQL-server</persistence-unit>
    
    <!-- Type of Objects -->
    <testClass>BasicTest</testClass>
      
    <!-- The workload -->  
    <terminals>10</terminals>  
    <works>
        <work>
            <time>10</time>
            <rate>10000</rate>
            <weights>25,25,25,25</weights>
        </work>
    </works>
    
    <!-- JPAB Procedures Declaration -->
    <transactiontypes>
        <transactiontype>
                <name>Persist</name>
        </transactiontype>
        <transactiontype>
                <name>Retrieve</name>
        </transactiontype>
        <transactiontype>
                <name>Update</name>
        </transactiontype>
        <transactiontype>
                <name>Delete</name>
        </transactiontype>
    </transactiontypes>
</parameters>