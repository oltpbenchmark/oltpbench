<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>mysql</dbtype>
    <driver>com.mysql.jdbc.Driver</driver>
    <DBUrl>jdbc:mysql://server:3306/voter</DBUrl>
    <username>user</username>
    <password>password</password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    
    <scalefactor>10</scalefactor>
    
    <!-- The workload -->
    <terminals>50</terminals>
    <works>
        <work>
          <time>300</time>
          <rate>10000</rate>
          <weights>100</weights>
        </work>
    </works>

    <!-- Voter Procedures declaration -->
    <transactiontypes>
        <transactiontype>
                <name>Vote</name>
        </transactiontype>
    </transactiontypes>
</parameters>
